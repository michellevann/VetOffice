@model VetOffice.Models.AppointmentCreate

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
   <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p>Customer's Name</p>
            <div class="col-md-10">
                @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <p>Pet's Name</p>
                <div class="col-md-10">
                    <textarea class="form-control" id="exampleTextarea" rows="1"></textarea>
                </div>
            </div>
            <br />
            <div class="form-group">
                <p>Appointment Date</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NextAppt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NextAppt, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <p>Appointment Time</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ApptTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ApptTime, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <p>Reason For Visit</</p>
                <select class="form-control">
                    <option>~Please select~</option>
                    <option>Annual Checkup</option>
                    <option>Vaccinations</option>
                    <option>Grooming</option>
                    <option>Spay/Neuter</option>
                    <option>Labwork/Tests</option>
                    <option>Declawing</option>
                    <option>Deworming</option>
                    <option>Emergency Services</option>
                </select>
            </div>
        </div>
        <br />
        <div class="form-control-lg">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-info btn-lg" />
                <a class="btn btn-info btn-lg" href="@Url.Action("Index", "Appointment")">Back To List</a>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
