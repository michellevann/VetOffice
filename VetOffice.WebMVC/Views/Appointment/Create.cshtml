@model VetOffice.Models.AppointmentCreate

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <h1 class="tableHeader">New Appointment</h1>
    <br />
    <br />
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="form-control-lg">
            @Html.LabelFor(model => model.Customer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="exampleTextarea">Pet's Name</label>
            <textarea class="form-control" id="exampleTextarea" rows="1"></textarea>
        </div>
        <br />
        <div class="form-control-lg">
            @Html.LabelFor(model => model.NextAppt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NextAppt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NextAppt, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-control-lg">
            @Html.LabelFor(model => model.ApptTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApptTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApptTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="exampleTextarea">Appointment Time</label>
            <textarea class="form-control" id="exampleTextarea" rows="1"></textarea>
        </div>
        <br />
        <div class="form-control-lg">Reason For Visit</div>
        <select class="form-control">
            <option>~Please select~</option>
            <option>Annual Checkup</option>
            <option>Vaccinations</option>
            <option>Grooming</option>
            <option>Spay/Neuter</option>
            <option>Labwork/Tests</option>
            <option>Declawing</option>
            <option>Deworming</option>
            <option>Emergency Services</option>
        </select>
    </div>
    <br />
    <div class="form-control-lg">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-info btn-lg" />
            <a class="btn btn-info btn-lg" href="@Url.Action("Index","Appointment")">Back To List</a>
        </div>
    </div>
</div>
    }

    <form>
        <fieldset>
            <legend>Legend</legend>
            <div class="form-group row">
                <label for="Customer" class="col-sm-2 col-form-label">Customer</label>
                <div class="col-sm-10">
                    <input type="text" readonly="" class="form-control-plaintext" id="Customer" value="email@example.com">
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="exampleSelect2">Reason For Visit</label>
                <select multiple="" class="form-control" id="exampleSelect2">
                    <option>Annual Checkup</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleTextarea">Example textarea</label>
                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
    <div class="centered">
        <div class="row ">
            <div class="col-lg-4">
                <div class="card border-warning mb-5" style="border-radius: 5px; max-width: 25rem;">
                    <div class="card-header">Reminder</div>
                    <div class="card-body">
                        <h4 class="card-title">Vacation Time</h4>
                        <p class="card-text">Just a quick reminder to put in for your vacation time for next year!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-warning mb-5" style="border-radius: 5px; max-width: 25rem;">
                    <div class="card-header">Important</div>
                    <div class="card-body">
                        <h4 class="card-title">Vaccinations</h4>
                        <p class="card-text">Please make sure our furry friends are up-to-date with rabies shots!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-warning mb-5" style="border-radius: 5px; max-width: 25rem;">
                    <div class="card-header">Fun Times</div>
                    <div class="card-body">
                        <h4 class="card-title">Christmas Party</h4>
                        <p class="card-text">Plan on attending this year's Christmas festivities at Top Golf!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

 