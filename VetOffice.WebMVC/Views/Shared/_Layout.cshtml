<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BowWow & Meow</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Emilys+Candy|Fredericka+the+Great|Fredoka+One|Kranky|Lily+Script+One|Questrial|Ribeye|Work+Sans:400,500,600&amp;subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
</head>
<body>
    <div class="icon-bar fixed-top">
        <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a>        
        <a href="@Url.Action("Index","Customer")"><i class="fa fa-user"></i></a>
        <a href="@Url.Action("Index","Pet")"><i class="fa fa-paw"></i></a>
        <a href="@Url.Action("Index","Appointment")"><i class="fa fa-calendar-alt"></i></a>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year BowWow & Meow</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-slate-min")
    @RenderSection("scripts", required: false)
</body>
</html>

