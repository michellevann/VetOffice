<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BowWow & Meow</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Emilys+Candy|Fredericka+the+Great|Fredoka+One|Kranky|Lily+Script+One|Questrial|Ribeye|Work+Sans:400,500,600&amp;subset=latin-ext" rel="stylesheet">

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-primary">

        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>

            </button>
            @Html.ActionLink("Best Books", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-collapse collapse" id="navbarSupportedContent">


                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Pets", "Index", "Pet", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Appointment", "Index", "Appointment", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year BowWow & Meow</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-slate-min")
    @RenderSection("scripts", required: false)
</body>
</html>

