@model VetOffice.Models.PetEdit

@{
    ViewBag.Title = "Edit";
}

<div class="backgroundImageForForms">
    <div class="formContainer" style="height:475px; padding-left:6%;">
        <div class="container" style="padding-left:0; height:17%;">
            <p class="tableHeader" style="display: flex; justify-content:flex-start;">Edit Pet</p>
            <br />
            <br />
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="padding-left:5%;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.PetId)

                <div class="form-group">
                    <p>Pet Name</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PetName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PetName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Type of Pet</p>
                    <div class="col-md-10" style="color:#808080">
                        @Html.EnumDropDownListFor(model => model.TypeOfPet, "Please select type of pet.", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <p>Breed</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Breed, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Breed, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Age of Pet</p>
                    <div class="col-md-10" style="color:#808080">
                        @Html.EnumDropDownListFor(model => model.AgeOfPet, "Please select age of pet.", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group-lg" style="padding-top: 3%;">
                    <div class="col-md-offset-2 col-md-3" style="padding-top: 2%; padding-left: 7%; margin: 0;">
                        <input type="submit" style="padding-left:26%; padding-right:26%;" value="Save" class="btn btn-info btn-lg">
                    </div>
                    <div class="col-md-offset-2 col-md-6" style="padding-top: 2%; padding-left: 10%; margin: 0;">
                        <a class="btn btn-info btn-lg" style="padding-left:10%; padding-right:10%;" href="/Pet">Back To List</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>
